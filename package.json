{
  "name": "micro-toolbox",
  "description": "A micro-sized utility library with common helper functions for JavaScript/TypeScript projects",
  "version": "1.0.0",
  "type": "module",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.cjs",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist"
  ],
  "keywords": [
    "utils",
    "utilities",
    "helpers",
    "typescript",
    "javascript",
    "lodash",
    "functional"
  ],
  "author": "Oleksandr Morozov",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/morozander/tiny-toolbox.git"
  },
  "bugs": {
    "url": "https://github.com/morozander/tiny-toolbox/issues"
  },
  "homepage": "https://github.com/morozander/tiny-toolbox#readme",
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "prepublishOnly": "npm run build",
    "test": "jest",
    "lint": "eslint src/**/*.ts",
    "format": "prettier --write src/**/*.ts",
    "example": "node examples/basic-usage.js"
  },
  "devDependencies": {
    "@types/jest": "^29.5.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.0.0",
    "jest": "^29.5.0",
    "prettier": "^3.0.0",
    "ts-jest": "^29.1.0",
    "typescript": "~5.8.3"
  },
  "engines": {
    "node": ">=14.0.0"
  }
}
